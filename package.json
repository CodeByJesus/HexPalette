{
  "name": "hexpalette",
  "displayName": "HexPalette",
  "description": "Lightning-fast inline color swatches with integrated color picker. View HEX, RGB, HSL colors instantly and edit them without leaving your editor.",
  "version": "0.1.1",
  "publisher": "HexPalette",
  "engines": {
    "vscode": "^1.74.0"
  },
  "keywords": [
    "color",
    "hex",
    "rgb",
    "hsl",
    "css",
    "color-picker",
    "design",
    "preview"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/HexPalette/HexPalette.git"
  },
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#ff6b6b",
    "theme": "dark"
  },
  "categories": [
    "Other",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:less",
    "onLanguage:html",
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hexpalette.toggleGutter",
        "title": "HexPalette: Toggle Gutter Colors"
      },
      {
        "command": "hexpalette.pickColor",
        "title": "HexPalette: Pick Color"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "18.x",
    "typescript": "^4.9.4"
  }
}
